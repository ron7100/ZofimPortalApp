<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ZofimPortalApp.Views.ManageUsers"
             FlowDirection="RightToLeft">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="חזור" Command="{Binding BackToHomePageCommand}" HorizontalOptions="Start" WidthRequest="100"/>
            <Label Text="{Binding HeaderMessage}" FontSize="Header"  FontAttributes="Bold" HorizontalTextAlignment="Center"/>
            <ListView ItemsSource="{Binding UsersList}" IsEnabled="{Binding IsUserSelected}" SelectionMode="Single" ItemSelected="UsersList_ItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="100"/>
                                </Grid.RowDefinitions>
                                <Label Text="{Binding Email}" Grid.Column="0" Grid.Row="0"/>
                                <Label Text="{Binding FirstName}" Grid.Column="1" Grid.Row="0"/>
                                <Label Text="{Binding LastName}" Grid.Column="2" Grid.Row="0"/>
                                <Label Text="{Binding PersonalId}" Grid.Column="3" Grid.Row="0"/>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>