<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ZofimPortalApp.Views.HomePage"
             FlowDirection="RightToLeft">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="ברוכים הבאים לאתר הצופים!" FontSize="Header" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
            <Button Command="{Binding ToLogInCommand}" Text="להתחברות"/>
            <Button Command="{Binding ToSignUpCommand}" Text="להרשמה"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>